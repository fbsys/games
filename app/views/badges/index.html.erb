<p id="notice"><%= notice %></p>
<h1>Listing badges</h1>
<%= link_to 'New Badge', new_badge_path %>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th>Created_at</th>
    </tr>
  </thead>

  <tbody>
    <% @badges.each do |badge| %>
      <tr>
        <td><%= badge.id %></td>
        <td><%= badge.name %></td>
        <td><%= badge.description %></td>
        <td><%= badge.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

