<h1>Listing badge_conditions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @badge_conditions.each do |badge_condition| %>
      <tr>
        <td><%= link_to 'Show', badge_condition %></td>
        <td><%= link_to 'Edit', edit_badge_condition_path(badge_condition) %></td>
        <td><%= link_to 'Destroy', badge_condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

